                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Label Content="Đây là kênh chat"
                                            Margin="5"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            VerticalContentAlignment="Center">
                                    </Label>
                                </Grid>
                                <StackPanel Grid.Row="0"
                                            Grid.Column="2"
                                            Orientation="Horizontal"
                                            FlowDirection="RightToLeft">
                                    <Grid Width="15"></Grid>
                                    <ToggleButton x:Name="BTN_SettingChanel"
                                                  Width="22"
                                                  Height="22"
                                                  FontSize="22"
                                                  Style="{StaticResource ToggleButtonIconHover}"
                                                  Content="&#xf013;">
                                    </ToggleButton>
                                    <Popup x:Name="POPUP_SettingChanel"
                                           Placement="Bottom"
                                           StaysOpen="False"
                                           VerticalOffset="-8"
                                           HorizontalOffset="5"
                                           PopupAnimation="Scroll"
                                           IsOpen="{Binding IsChecked,ElementName=BTN_SettingChanel}"
                                           AllowsTransparency="True">
                                        <Grid Margin="10">
                                            <Grid.Effect>
                                                <DropShadowEffect  ShadowDepth="1" BlurRadius="5"/>
                                            </Grid.Effect>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="10"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <StackPanel HorizontalAlignment="Stretch"
                                                        FlowDirection="RightToLeft"
                                                        Margin="10,0,15,0"
                                                        Orientation="Horizontal">
                                                <Polygon Width="25"
                                                        Points="11,0 25,10, 0,10" 
                                                        Stroke="#393B3E"
                                                        Fill="#393B3E" >
                                                </Polygon>
                                            </StackPanel>
                                            <Border Grid.Row="1"
                                                    Width="200"
                                                    CornerRadius="12"
                                                    Background="#393B3E">
                                                <StackPanel>
                                                    <ctrl:CButton BorderRadius="5,5,0,0"
                                                              Height="25"
                                                              Background="#393B3E"
                                                              Content="Thiết lập">
                                                    </ctrl:CButton>
                                                    <Grid Height="1" Background="Gray"></Grid>
                                                    <ctrl:CButton Grid.Row="1"
                                                              Height="25"
                                                              Background="#393B3E"
                                                              Content="Thiết lập 1">
                                                    </ctrl:CButton>
                                                    <Grid Height="1" Background="Gray"></Grid>
                                                    <ctrl:CButton  Grid.Row="2"
                                                               Height="25"
                                                               Background="#393B3E"
                                                               BorderRadius="0,0,5,5"
                                                               Content="Thiết lập 2">
                                                    </ctrl:CButton>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Popup>
                                </StackPanel>
                            </Grid>
                            </Border>
                            <!--Content chat chanel-->
                            <Grid  x:Name="xGrid_Content" Background="WhiteSmoke"
                                   HorizontalAlignment="Stretch" 
                                   Margin="0,0,5,0">
                                <ctrl:CConversation  BorderThickness="0"></ctrl:CConversation>
                            </Grid>
                        </DockPanel>
                    </Grid>
                </DockPanel>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            </Grid>
            <!-- ======================================  Footer ====================================== -->
            <Grid x:Name="Footer" Grid.Row="2" Margin="0" Background="Transparent">
                <StackPanel Orientation="Horizontal"
                            Margin="4"
                            FlowDirection="RightToLeft">
                    <TextBlock Text="Copyright wpf-foxchat @2022"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Stretch">
                    </TextBlock>
                </StackPanel>
            </Grid>
            <Border Grid.Row="0" Grid.RowSpan="3"
                    Visibility="{Binding VisiblePopupOverflow}"
                    CornerRadius="10"
                    Background="#33000000" 
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Stretch">
                <Border.RenderTransform>
                    <TranslateTransform X="0" Y="0" />
                </Border.RenderTransform>
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Style.Triggers>
                            <Trigger Property="Visibility" Value="Visible">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                             From="0.0" To="1.0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
        </Grid>
    </Border>

</Window>
