        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_foxchat"
        xmlns:ctrl ="clr-namespace:wpf_foxchat.Controls"
        mc:Ignorable="d"
        MinWidth="600" MinHeight="620"
        Width="1150"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource FoxChatWin}">
    <Window.Resources>
        <Style TargetType="{x:Type ToolTip}">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="100"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToolTip}">
                        <Border Name="Border"
                                BorderBrush="DarkGray"
                                BorderThickness="1"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}"
                                CornerRadius="4">
                            <Border.Background>
                                <LinearGradientBrush  StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="Snow" Offset="0.0"/>
                                    <GradientStop Color="Gainsboro" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter></ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
        </Style>
    </Window.Resources>
    <Border Background="{StaticResource TitleBarColor}" CornerRadius="10,12,10,10" Margin="4">
        <Grid Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="26"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="26"></RowDefinition>
            </Grid.RowDefinitions>
            <!-- ====================================== Title Bar ====================================== -->
            <Grid   x:Name="TitleBar" Grid.Row="0"
                    Background="Transparent" 
                    HorizontalAlignment="Stretch"
                    MouseDown="TitleBar_MouseDown"
                    MouseMove="TitleBar_MouseMove"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Label Margin="10,0,0,0" Content="Minichat" VerticalAlignment="Center" >
                </Label>
                <StackPanel Background="Transparent"
                        Orientation="Horizontal"
                        FlowDirection="RightToLeft">
                    <ctrl:FButton Width="30"
                               Content="🗙"
                               BorderThickness="0"
                               Background="{StaticResource TitleBarColor}" 
                               BorderRadius="10,0,0,0"
                               BorderBrush="Violet"
                               Click="ButtonClose_Click">
                    </ctrl:FButton>
                    <ctrl:FButton Width="30"
                               Content="🗖"
                               BorderThickness="0"
                               Background="{StaticResource TitleBarColor}" 
                               BorderRadius="0"
                               BorderBrush="Violet"
                               Click="ButtonMaximize_Click">
                    </ctrl:FButton>
                    <ctrl:FButton Width="30"
                               Content="🗕"
                               BorderThickness="0"
                               Background="{StaticResource TitleBarColor}" 
                               BorderRadius="0"
                               BorderBrush="Violet"
                               Click="ButtonMinimize_Click">
                    </ctrl:FButton>
                </StackPanel>
            </Grid>
